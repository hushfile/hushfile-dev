  server {
    
    listen 86;
    
    root /var/www/;
    
    # Make site accessible from http://localhost/
    server_name localhost;

    location / {
        index hushfile.html;
        try_files $uri /hushfile-web/$uri /hushfile-web/hushfile.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:5000;
    }
    
  }
